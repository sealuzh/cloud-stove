= form_for @component do |f|
  - if @component.errors.any?
    #error_explanation
      %h2= "#{pluralize(@component.errors.count, "error")} prohibited this blueprint from being saved:"
      %ul
        - @component.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :component_type
    = f.text_field :component_type, class: 'form-control'
  .form-group
    = f.label :body
    = f.text_area :body, rows: 25, class: 'form-control monospace md'
  = f.fields_for :deployments do |builder|
    = render 'deployment_fields', f: builder
  .form-group
    = link_to_add_fields "Add Deployment", f, :deployments, Component::Deployment
  .form-group
    = f.submit 'Save', class: 'btn btn-success'
