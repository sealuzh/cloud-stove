%fieldset
  %hr
  %h3 Add component
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :component_type
    = f.text_field :component_type, class: 'form-control'
  .form-group
    = f.label :body
    = f.text_area :body, rows: 10, class: 'form-control monospace md'
  .form-group
    = f.check_box :_destroy
    = f.label :_destroy, "Remove Deployment"
