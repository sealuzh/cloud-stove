.resource.row
  .col-sm-3.title= resource.name
  %code.col-sm-2.text-right.price.text-default.bg-default #{format_price(resource.price_per_month)}/month
  - if resource.is_compute?
    - cores = resource.ma['cores']
    - if cores == 'shared'
      - cores = 1
      %span.cores 1 shared core
    - else
      %span.cores= pluralize cores, 'core'
    %span.mem #{resource.ma['mem_gb']}GB RAM
    %code.col-sm-2.text-right.price_per_core{data: { ppc: price_per_core(resource, raw: true) } }
      #{price_per_core(resource)}/core
    %code.col-sm-2.text-right.price_per_gb_ram{data: { ppgb: price_per_gb_ram(resource, raw: true) } }
      #{price_per_gb_ram(resource)}/GB RAM