%h1.clearfix
  = t('.title')

%table.table
  %thead
    %tr
      %th ID
      %th Status
      %th Created
      %th Run At
      %th Attempts
      %th{:style => 'width: 190px;'} Last Error
      %th{:style => 'width: 115px;'} Actions
  - @jobs.each do |job|
    %tbody
      %tr
        %td= link_to "##{job.id}",job_path(job)
        %td
          %span{:class => "#{status_dom_class(job.status)}"}
            =job.status
        %td= job.created_at
        %td= job.run_at
        %td= job.attempts
        %td= link_to_if job.last_error.present?, truncate(job.last_error), job_path(job)
        %td
          -if job.can_destroy?
            = button_to 'Delete', job_path(job), method: :delete, class: 'btn btn-danger btn-mini', form_class: 'btn-rails pull-right'


