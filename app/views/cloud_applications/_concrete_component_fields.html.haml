%fieldset
  %hr
  %h3 Add component

  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'

  .form-group
    = f.label :body
    = f.text_area :body, rows: 10, class: 'form-control monospace md'

  = f.fields_for :slos do |builder|
    = render 'slo_fields', f: builder
  .form-group
    = link_to_add_fields "Add SLO", f, :slos, Slo
  .form-group
    = f.check_box :_destroy
    = f.label :_destroy, "Remove Component"
