footer.cs-footer {
  margin-top: 3rem;
  padding: 4rem 0;
  
  @extend .text-muted;
  font-size: 87.5%;
  
  border-top: 1px solid $gray-lighter;
  background-color: $gray-lightest;
  
  ul {
    @extend .float-sm-right;
    @extend .list-inline;
    
    li {
      @extend .list-inline-item;
      padding-right: 1em;
      
      &:last-child {
        padding-right: 0em;
      }
    }
  }
}

